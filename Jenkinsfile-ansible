pipeline {
    agent any
    
    parameters {
        choice (name: 'process', choices: ['install', 'uninstall'], description: 'Choose to install or uninstall')
    }

    stages {
        stage('Clean') {
            steps {
                cleanWs()  // Clean the workspace
            }
        }

        stage('Install') {
            when {
                expression { params.process == 'install' }
            }
            steps {
                ansiColor('xterm') {  // Wrap steps that need colored output
                    ansiblePlaybook(
                        playbook: "ansible-scripts/install.yml",
                        inventory: "hosts.ini",
                        become: true,
                        extras: '-vvv',
                        forks: 1,
                        disableHostKeyChecking: true,
                        credentialsId: 'ssh-key',
                        colorized: true
                    )
                }
            }
        }

        stage('Uninstall') {
            when {
                expression { params.process == 'uninstall' }
            }
            steps {
                ansiColor('xterm') {  // Wrap steps that need colored output
                    ansiblePlaybook(
                        playbook: "ansible-scripts/uninstall.yml",
                        inventory: "hosts.ini",
                        become: true,
                        extras: '-vvv',
                        forks: 1,
                        disableHostKeyChecking: true,
                        credentialsId: 'ssh-key',
                        colorized: true
                    )
                }
            }
        }
    }
}
