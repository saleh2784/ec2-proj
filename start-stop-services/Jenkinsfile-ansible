pipeline {
    agent any
    
    parameters {
        choice (name: 'process', choices: ['start', 'stop', 'repair', 'gc'], description: 'Choose to start or stop services')
    }

    stages {
        stage('Clean') {
            steps {
                cleanWs()  // Clean the workspace
            }
        }
        stage('Get SCM') {
            steps {
                git branch: 'master', url: 'https://github.com/saleh2784/ec2-proj.git'
            }
        }
        stage('Check PATH') {
            steps {
                sh 'echo $PATH'
            }
        }

        stage('Start services') {
            when {
                expression { params.process == 'start' }
            }
            steps {
                ansiColor('xterm') {  // Wrap steps that need colored output
                    ansiblePlaybook(
                        playbook: "start-stop-services/start.yaml",
                        inventory: "start-stop-services/hosts.ini",
                        become: true,
                        extras: '-vvv',
                        forks: 1,
                        disableHostKeyChecking: true,
                        credentialsId: 'ssh-key',
                        colorized: true
                    )
                }
            }
        }

        stage('Stop services') {
            when {
                expression { params.process == 'stop' }
            }
            steps {
                ansiColor('xterm') {  // Wrap steps that need colored output
                    ansiblePlaybook(
                        playbook: "start-stop-services/stop.yaml",
                        inventory: "start-stop-services/hosts.ini",
                        become: true,
                        extras: '-vvv',
                        forks: 1,
                        disableHostKeyChecking: true,
                        credentialsId: 'ssh-key',
                        colorized: true
                    )
                }
            }
        }
        stage('Run Reapir') {
            when {
                expression { params.process == 'repair' }
            }
            steps {
                ansiColor('xterm') {  // Wrap steps that need colored output
                    ansiblePlaybook(
                        playbook: "start-stop-services/repair.yaml",
                        inventory: "start-stop-services/hosts.ini",
                        become: true,
                        extras: '-vvv',
                        forks: 1,
                        disableHostKeyChecking: true,
                        credentialsId: 'ssh-key',
                        colorized: true
                    )
                }
            }
        }
        stage('Run GC') {
            when {
                expression { params.process == 'gc' }
            }
            steps {
                ansiColor('xterm') {  // Wrap steps that need colored output
                    ansiblePlaybook(
                        playbook: "start-stop-services/gc.yaml",
                        inventory: "start-stop-services/hosts.ini",
                        become: true,
                        extras: '-vvv',
                        forks: 1,
                        disableHostKeyChecking: true,
                        credentialsId: 'ssh-key',
                        colorized: true
                    )
                }
            }
        }
    }
}
